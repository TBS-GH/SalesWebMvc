<!-- vamos declarar um objeto com nome model(que é o arrobaModel), ele vai corresponder
    ao objeto que passamos no método view lá no controler, que no caso vai ser uma lista de Seller
    logo na view vamos declara o tipo deste objeto, ela vai receber um IEnumerable(tipo de coleção
    bem generico)-->
@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<!--Criando a taebla qu vai ser exibida na tela-->
<table class=" table table-striped table-hover">
    <!--Criando o cabeçalho da tabela-->
    <thead>
        <!-- o <tr> é o comando para criar linha em html, o class="success" é para manter a mesma
            cor padrão do bootstrap-->
        <tr class="success">
            <!--colunas do cabeçalho ou de titulo-->
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th> <!--adicioado um espaço em branco no titulo-->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <!--para cada linha da tabela-->
        <tr>
            <!--para cada coluna<td>-->
            <td>
                @Html.DisplayFor(modelItem => item.Name);
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email);
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate);
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseSalary);
            </td>
            <!--criando os links para editar, detalhes e deletar-->
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>



</table>


<p>Sellers index page</p>
