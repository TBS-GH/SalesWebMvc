@model SalesWebMvc.Models.Seller;

@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Seller</h4>
    <hr />
    <!--o elemento dl ele lista os campos do nosso obj-->
    <dl class="dl-horizontal">
        <!--o elemento dt mostra o nome do campo e o elemto dd mostra o valor do campo-->
        <dt>
            @Html.DisplayNameFor(model => model.Name);
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name);
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email);
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email);
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BirthDate);
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BirthDate);
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BaseSalary);
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BaseSalary);
        </dd>
    </dl>
    <!--vamos criar um form com os botoes de cancelar ou de confirmar a deleção-->
    <form asp-action="Delete">
        <!--crinado um botao, o que vamos enviar nesse formulario? será o codigo do vendendor-->
        <!--colcando um campo oculto no formualrio-->
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <!--link para voltar a listagem de vendedores-->
        <a asp-action="Index">Back to Seller List</a>
    </form>

</div>